<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bookmark.BookmarkFragment"
    android:background="@color/trendingSearch">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_bookmark"
        android:name="com.example.hw9.ui.bookmark.BookmarkFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="2dp"
        android:background="@color/colorSearchBar"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/fragment_bookmark_item" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bookmark_text"
        android:textStyle="bold"
        android:text="No Bookmarked Articles"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        />

</FrameLayout>
